<%= form_for @user do |f| %>

  <%= render 'error_form' %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :user_name %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
