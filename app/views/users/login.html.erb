<p>Sign In</p>
<%= form_for @user, :url => sign_in_path(@user) do |f| %>
  <p>
    <%= f.label 'username:' %><br />
    <%= f.text_field :user_name %>
  </p>
  <p>
    <%= f.label 'password:' %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'Sign In' %>
    <%= f.submit 'Clear Form', :type => 'reset' %>
  </p>
<% end %>

<%= link_to "Create a new user", new_user_path %>
